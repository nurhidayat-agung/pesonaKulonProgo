<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#e8a500"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="7dp">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#FADE0F"
                        android:endColor="#FDDE0C"
                        android:angle="270" />
                    <corners
                        android:radius="30dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>
