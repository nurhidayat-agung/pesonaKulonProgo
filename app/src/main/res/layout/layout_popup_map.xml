<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:layout_width="200dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_pop_up_marker"
            android:src="@drawable/mangrove"
            android:scaleType="centerCrop"
            android:layout_width="200dp"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/place_title"
            android:padding="3dp"
            android:text="Hutan Mangrove"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:paddingLeft="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_place"
                android:src="@drawable/ic_location_on_black_18dp"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="13dp" />
            <TextView
                android:id="@+id/distance"
                android:text="29 km"
                android:textSize="10sp"
                android:layout_marginLeft="0dp"
                android:gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:padding="3dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_time"
                android:layout_below="@id/img_place"
                android:src="@drawable/ic_access_time_black_18dp"
                android:adjustViewBounds="true"
                android:layout_marginLeft="1dp"
                android:layout_gravity="center_vertical|right"
                android:layout_width="wrap_content"
                android:layout_height="10dp" />
            <TextView
                android:text="1 Jam 15 mnt"
                android:textSize="10sp"
                android:layout_toRightOf="@id/img_time"
                android:layout_marginLeft="2dp"
                android:layout_below="@id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
